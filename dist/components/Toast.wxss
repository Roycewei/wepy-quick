@keyframes simple-toast-fall-down {
  0% {
    transform: translateY(-40rpx);
    opacity: 0;
  }
  100% {
    transform: translateY(0rpx);
    opacity: 1;
  }
}
.simple-toast {
  display: block;
}
.simple-toast-box {
  position: fixed;
  top: 10rpx;
  left: 0;
  font-size: 12rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 3;
}
.simple-toast-content {
  animation: simple-toast-fall-down 0.5s ease 1;
  background: white;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  border: 1rpx #ddd solid;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.2);
  display: flex;
  opacity: 1;
  position: relative;
  top: 0;
  align-items: center;
  word-break: keep-all;
  white-space: nowrap;
}
.simple-toast-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}
.simple-toast-transition {
  transition: top 500ms, opacity 500ms;
  opacity: 0;
  top: -40rpx;
  position: absolute;
}
.simple-toast-item {
  position: relative;
}
.simple-toast-item + .simple-toast-item {
  margin-top: 5rpx;
}
@keyframes simple-toast-temp-remove {
  0% {
    height: 35rpx;
    padding-top: 8rpx;
    padding-bottom: 8rpx;
    border: none;
  }
  100% {
    height: 0rpx;
    padding-top: 0rpx;
    padding-bottom: 0rpx;
    border: none;
  }
}
.simple-toast-remove-temp {
  height: 0rpx;
  animation: simple-toast-temp-remove 0.5s ease 1;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  border: 1rpx #ddd solid;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.2);
  display: flex;
  position: relative;
  align-items: center;
  word-break: keep-all;
  white-space: nowrap;
  opacity: 0;
}
