
    <view class="my">
      <movable-area class="user" style="height: {{windowHeight}}; width: 750rpx;position: absolute;top:0;left:0;">
        <!-- direction：all、vertical、horizontal、none -->
        <movable-view class="avatar" style="width:168rpx;height:168rpx;margin-top:80rpx;" x="{{x}}" y="{{y}}" damping="50" friction="0" inertia="true" bindchange="htouchmove" direction="all">
          <image src="{{userInfo.avatarUrl}}" mode="aspectFit"/>
        </movable-view>
        <text catchtap="comeBack">{{userInfo.nickName}}</text>
      </movable-area>
      <view class="mask"  wx:if="{{authShow}}" catchtap="closeLayer" catchtouchmove="{{false}}"/>
      <view class="auth-alert {{authShow?'show':'hide'}}" catchtouchmove="{{false}}">
        <text class="title">需要登录后才能继续操作</text>
        <button class="auth" lang="zh-CN" open-type="getUserInfo" bindgetuserinfo="auth" bindtap="closeLayer">授权登录</button>  
      </view>
      
  <view class="simple-toast">
    <view class="simple-toast-box">
      <view class="simple-toast-item"  wx:for="{{$toast$tipList}}" wx:for-item="item" wx:key="index">
        <view class="simple-toast-content {{item.isRemove ?'simple-toast-transition':''}}">
          <image src="{{$toast$icons[item.type]}}" class="simple-toast-icon"/>
          <text>{{item.title}}</text>
        </view>
        <view wx:if="{{item.isRemove}}" class="simple-toast-remove-temp">
          <image src="{{$toast$icons[item.type]}}" class="simple-toast-icon"/>
          <text>{{item.title}}</text>
        </view>
      </view>
    </view>
  </view>

      
    <view class="mask"  wx:if="{{$authorization$inviteShow}}" catchtap="$authorization$closeInvite" catchtouchmove="$authorization${{$authorization$false}}"/>
    <view class="auth-alert {{$authorization$inviteShow?'show':'hide'}}" catchtouchmove="$authorization${{$authorization$false}}">
      <text class="title">需要登录后才能继续操作</text>
      <button class="auth" lang="zh-CN" open-type="getUserInfo" bindgetuserinfo="$authorization$goLogin" bindtap="$authorization$closeLayer">授权登录</button>  
  	</view>
  
  <view class="simple-toast">
    <view class="simple-toast-box">
      <view class="simple-toast-item"  wx:for="{{$authorization$toast$tipList}}" wx:for-item="item" wx:key="index">
        <view class="simple-toast-content {{item.isRemove ?'simple-toast-transition':''}}">
          <image src="{{$authorization$toast$icons[item.type]}}" class="simple-toast-icon"/>
          <text>{{item.title}}</text>
        </view>
        <view wx:if="{{item.isRemove}}" class="simple-toast-remove-temp">
          <image src="{{$authorization$toast$icons[item.type]}}" class="simple-toast-icon"/>
          <text>{{item.title}}</text>
        </view>
      </view>
    </view>
  </view>


    </view>